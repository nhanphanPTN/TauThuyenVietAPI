@model List<ProductMainCategory>

<nav id="main-nav" class="navbar navbar-expand-lg navbar-light bg-light">
	<div class="container">
		<a class="navbar-brand" asp-route="Home">
			<img src="/Content/images/logo/logo.png" />
		</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav ml-auto">
				<li class="nav-item active">
					<a class="nav-link" asp-route="Home">
						<i class="fa fa-home text-dark"></i>
						Trang Chủ
					</a>
				</li>
				<li class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" asp-route="ProductList" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						<i class="fa fa-first-order text-primary"></i>
						Sản Phẩm
					</a>
					<ul class="dropdown-menu">
						@foreach (var item in Model)
						{
							<li class="dropdown">
								<a class="dropdown-item" asp-route="ProductListByID"
														 asp-route-mid="@item.ProductMainCategoryID"
														 asp-route-cid="0"
														 asp-route-title="@item.Title.ToUrlFormat()">
									@item.Title
								</a>
								<ul class="dropdown-menu">
									@foreach (var childItem in item.ProductCategories)
									{
										<li class="dropdown">
											<a class="dropdown-item" asp-route="ProductListByID"
																     asp-route-mid="@item.ProductMainCategoryID"
																     asp-route-cid="@childItem.ProductCategoryID"
																     asp-route-title="@childItem.Title.ToUrlFormat()">
												@childItem.Title
											</a>
										</li>
									}
								</ul>
							</li>
						}

					</ul>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-route="ArticleList">
						<i class="fa fa-newspaper-o text-danger"></i>
						Tin Tức
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-route="Contact">
						<i class="fa fa-volume-control-phone text-success"></i>
						Liên Hệ
					</a>
				</li>
				<li class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" asp-route="HomeEngLish" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						<i class="language language-english"></i>
						English
					</a>
					<ul class="dropdown-menu">
						<li>
							<a class="dropdown-item" asp-route="Home">
								<i class="language language-vietnamese"></i>
								Tiếng Việt
							</a>
						</li>
						<li>
							<a class="dropdown-item" asp-route="HomeEngLish">
								<i class="language language-english"></i>
								English
							</a>
						</li>
					</ul>
				</li>
			</ul>
		</div>
	</div>
</nav>
